{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
          "esnext"
      ],
      "module": "amd",
      "sourceMap": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "allowUnusedLabels": false,
      "removeComments": true,
      "strict": true,
      "baseUrl": ".",
      "rootDir": "."
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }
